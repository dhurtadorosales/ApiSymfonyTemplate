{% form_theme form 'bootstrap_3_layout.html.twig' %}

{% extends 'layout.html.twig' %}

{% trans_default_domain 'form' %}

{% block title %}
    {% if alias.id %}
        {{ 'form.alias.edit'|trans }} {{ alias }}
    {% else %}
        {{ 'form.alias.new'|trans }}
    {% endif %}
{% endblock %}

{% block content %}
    <div class="container">
        <div class="well">
            <h2>
                {% if alias.id %}
                    {{ 'form.alias.edit'|trans }} {{ alias }}
                {% else %}
                    {{ 'form.alias.new'|trans }}
                {% endif %}
            </h2>
        </div>
    </div>

    <div class="container">
        {{ form_start(form) }}
        {{ form_widget(form) }}

        <div class="form-grupo">
            <div class="col-sm-2"></div>
            <div class="col-sm-10">
                <button type="submit" name="enviar" class="btn btn-default">
                    <i class="fa fa-check"></i> {{ 'form.submit'|trans }}
                </button>
                <a href="{{ path('homepage') }}" name="delete" class="btn btn-default">
                    <i class="fa fa-times"></i> {{ 'form.cancel'|trans }}
                </a>
            </div>
        </div>

        {{ form_end(form) }}
    </div>

{% endblock %}