{% trans_default_domain 'layout' %}

<nav class="navbar navbar-default">
    <div class="container">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
                <span class="sr-only">Dropdown</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <a class="navbar-brand" href="{{ path('homepage') }}">{{ site_name }}</a>
        </div>
        <div id="navbar" class="navbar-collapse collapse">
            <ul class="nav navbar-nav">
                <li><a href="{{ path('homepage') }}"><i class="fa fa-home"></i> {{ 'layout.page.home'|trans }}</a></li>
                {% if app.user and not is_granted('ROLE_ADMIN') %}

                    <li>
                        <a href="{{ path('alias_new', { 'user_id': app.user.id }) }}">
                            <i class="fa fa-plus"></i> {{ 'layout.page.alias_new'|trans }}
                        </a>
                    </li>

                    <li>
                        <a href="{{ path('alias_my', {'id': app.user.id}) }}">
                            <i class="fa fa-user-secret"></i> {{ 'layout.page.alias_my'|trans }}
                        </a>
                    </li>

                {% endif %}
                {% if is_granted('ROLE_ADMIN') %}

                    <li>
                        <a href="{{ path('users_all') }}">
                            <i class="fa fa-users"></i> {{ 'layout.page.users'|trans }}
                        </a>
                    </li>

                    <li>
                        <a href="{{ path('alias_all') }}">
                            <i class="fa fa-user-secret"></i> {{ 'layout.page.alias_all'|trans }}
                        </a>
                    </li>

                {% endif %}
            </ul>
            <ul class="nav navbar-nav navbar-right">
                {% if app.user %}
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" data-hover="dropdown">
                            <i class="fa fa-user-circle-o"></i> {{ app.user }}
                        </a>
                        <ul class="dropdown-menu">

                            <li>
                                <a href="{{ path('profile', { 'id': app.user.id }) }}">
                                    <i class="fa fa-cog"></i> {{ 'layout.profile'|trans }}
                                </a>
                            </li>

                            <li class="divider"></li>

                            <li>
                                <a href="{{ path('change_password', { 'id': app.user.id }) }}">
                                    <i class="fa fa-key"></i> {{ 'layout.change_password'|trans }}
                                </a>
                            </li>

                            <li class="divider"></li>

                            <li>
                                <a href="{{ path('logout') }}">
                                    <i class="fa fa-sign-out"></i> {{ 'layout.page.logout'|trans }}
                                </a>
                            </li>
                        </ul>
                    </li>
                {% else %}
                    <li>
                        <a href="{{ path('user_new') }}">
                            <i class="fa fa-user-plus"></i> {{ 'layout.page.register'|trans }}
                        </a>
                    </li>

                    <li>
                        <a href="{{ path('login') }}">
                            <i class="fa fa-sign-in"></i> {{ 'layout.page.access'|trans }}
                        </a>
                    </li>
                {% endif %}
            </ul>
        </div><!--/.nav-collapse -->
    </div>
</nav>