{% extends 'layout.html.twig' %}

{% block content %}
    <h1>
        {% if user.id %}
            Edit {{ user.name }} {{ user.lastName }}
        {% else %}
            New user
        {% endif %}
    </h1>
    {% include 'common/flash.html.twig' %}
    {{ form_start(form) }}
    {{ form_widget(form) }}

    <div class="form-grupo">
        <div class="col-sm-2"></div>
        <div class="col-sm-10">
            <button type="submit" name="enviar" class="btn btn-success btn">
                <i class="fa fa-check"></i> Save
            </button>
            <a href="{{ path('homepage') }}" name="eliminar" class="btn btn-danger btn">
                <i class="fa fa-return"></i> Return
            </a>
        </div>
    </div>

    {{ form_end(form) }}

{% endblock %}