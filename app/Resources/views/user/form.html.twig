{% form_theme form 'bootstrap_3_layout.html.twig' %}

{% extends 'layout.html.twig' %}

{% trans_default_domain 'form' %}

{% block title %}
    {% if user.id %}
        {{ 'form.user.edit'|trans }} {{ user.name }} {{ user.lastName }}
    {% else %}
        {{ 'form.user.new'|trans }}
    {% endif %}
{% endblock %}

{% block content %}
    <div class="container">
        <div class="well">
            <h2>
                {% if user.id %}
                    {{ 'form.user.edit'|trans }}Edit {{ user.name }} {{ user.lastName }}
                {% else %}
                    {{ 'form.user.new'|trans }}
                {% endif %}
            </h2>
        </div>
    </div>

    <div class="container">
        {% include 'common/flash.html.twig' %}
        {{ form_start(form) }}
        {{ form_widget(form) }}

        <div class="form-grupo">
            <div class="col-sm-2"></div>
            <div class="col-sm-10">
                <button type="submit" name="enviar" class="btn btn-primary">
                    <i class="fa fa-check"></i> {{ 'form.submit'|trans }}
                </button>
                <a href="{{ path('homepage') }}" name="eliminar" class="btn btn-danger">
                    <i class="fa fa-times"></i> {{ 'form.cancel'|trans }}
                </a>
            </div>
        </div>

        {{ form_end(form) }}
    </div>

{% endblock %}