{% extends 'layout.html.twig' %}

{% trans_default_domain 'login' %}

{% block title %}{{ 'login.title'|trans }}{% endblock %}

{% block content %}
    {% if error %}
        <div class="container">
            <div class="alert alert-danger">
                {{ error.messageKey|trans(error.messageData, 'security') }}
            </div>
        </div>
    {% endif %}
    <div class="container">
        <form method="post" action="{{ path('check') }}">
            <div class="container">
                <div class="well">
                    <h2>{{ 'login.title'|trans }}</h2>
                </div>
            </div>

            <div class="form-group">
                <label for="_username">{{ 'login.user.label'|trans }} </label>
                <input type="email"
                       name="_username"
                       required="required"
                       class="form-control"
                       placeholder="{{ 'login.user.placeholder'|trans  }}"
                       value="{{ last_user }}"
                        {% if not last_user %}
                    autofocus="autofocus"
                        {% endif %}>
            </div>

            <div class="form-group">
                <label for="_password">{{ 'login.pass.label'|trans }} </label>
                <input type="password"
                       name="_password"
                       class="form-control"
                       required="required"
                       placeholder="{{ 'login.pass.placeholder'|trans  }}"
                        {% if not last_user %}
                    autofocus="autofocus"
                        {% endif %}>
            </div>
            <button type="submit" class="btn btn-default">
                <i class="fa fa-sign-in"></i> {{ 'login.submit'|trans }}
            </button>

            <a href="{{ path('homepage') }}" class="btn btn-default">
                <i class="fa fa-times"></i> {{ 'login.cancel'|trans }}
            </a>
        </form>
    </div>

{% endblock %}