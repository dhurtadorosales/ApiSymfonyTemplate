{% extends '::layout.html.twig' %}

{% block body %}
    <div>
        <ul>
            {% for user in users %}
                <li>
                    {{ user.name }} {{ user.lastName }}
                    <a href="{{ path('user_edit', {'id': user.id}) }}" class="btn btn-primary">Edit User</a>
                    <a href="{{ path('user_delete', {'id': user.id}) }}" class="btn btn-primary">Delete User</a>
                </li>
            {% endfor %}
        </ul>
    </div>
{% endblock %}
